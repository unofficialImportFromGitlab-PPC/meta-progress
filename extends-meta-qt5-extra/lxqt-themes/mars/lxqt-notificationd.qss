Notification {
    color: #f5f1f0;
    border: 1px solid #2b2b29;
    background-color:qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #583f2b, stop:1 #4d4845);
    margin: 0px;
    border-radius: 5px;
}

QLabel {
    color: #f5f1f0;
}

#closeButton {
    border: none;
    qproperty-icon: url(lxqt-notificationd/cancel.svg);
    qproperty-icon-size: 24px;
}

#closeButton:hover {
    padding: 4px;
}

#appLabel {
    font-weight: bold;

}

#summaryLabel {
    font-style: italic;
}
